<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/divider"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <LinearLayout
            android:id="@+id/ShopItem0"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mugDisplay"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                app:srcCompat="@drawable/mugwhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="119dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Mug"
                    android:textAlignment="viewStart"
                    android:textColor="#010000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/mugColorChanger"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/colour_button_white" />
            </LinearLayout>

            <Button
                android:id="@+id/previewbutton0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="AR Preview"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <LinearLayout
            android:id="@+id/ShopItem1"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shirtDisplay"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                app:srcCompat="@drawable/shirtwhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shirtTextView"
                    android:layout_width="119dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Shirt"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/shirtColorChanger"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/colour_button_white" />

            </LinearLayout>

            <Button
                android:id="@+id/previewbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="AR Preview"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider"
            android:visibility="invisible"
            tools:visibility="invisible" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>